{
  "version": 6,
  "configurePresets": [
    {
      "name": "clang-ninja-debug",
      "displayName": "Clang + Ninja (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}